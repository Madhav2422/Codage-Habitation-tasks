{
  "compilerOptions": {
    "target": "ES6",                         // Target ECMAScript version
    "module": "commonjs",                    // Module system (Node.js uses CommonJS)
    "outDir": "./dist",                      // Output directory for compiled files
    "rootDir": "./src",                      // Root directory for source files
    "esModuleInterop": true,                 // Enables interoperability between ES modules and CommonJS modules
    "strict": true,                          // Enable strict type checking options
    "skipLibCheck": true,                    // Skip type checking of declaration files (speeds up compilation)
    "forceConsistentCasingInFileNames": true // Ensures consistent casing for file names
  },
  "include": ["src/**/*"],                   // Include all files in the src folder
  "exclude": ["node_modules", "dist"]        // Exclude node_modules and dist folders
}
